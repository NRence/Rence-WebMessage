<p id="token"> Token Now </p>


<script>
function getCurrentDate() {
var myHeaders = new Headers();
myHeaders.append("Content-Type", "application/x-www-form-urlencoded");

var urlencoded = new URLSearchParams();
urlencoded.append("grant_type", "client_credentials");
urlencoded.append("client_id", "cf0d8045-f160-4407-85f2-6ddc6fd9ed30");
urlencoded.append("client_secret", "ANVLAozcszV8HGqTAbKGQig0Q983fFuDqNymp8NzSzc");

var requestOptions = {
  method: 'POST',
  mode: 'no-cors',
  referrerPolicy: 'no-referrer',
  headers: myHeaders,
  body: urlencoded,
  redirect: 'follow'
};

fetch("https://login.cac1.pure.cloud/oauth/token", requestOptions)
  .then(response => response.text())
  .then(result => console.log(result))
  .catch(error => console.log('error', error));
  
  document.getElementById("token").innerHTML = response.access_token ;
}
</script>

<button type="button" onclick="getCurrentDate()">Get Current Date</button>

